<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtticaMAUI.Views.Artistas.CrearArtista"
             Title="Crear Artista">
    <StackLayout Padding="20">
        <Label Text="Crear Nuevo Artista"
               FontSize="Large"
               HorizontalOptions="Center"
               Margin="0,20,0,20"/>

        <Label Text="Nombre"/>
        <Entry x:Name="nombreEntry"
               Placeholder="Nombre del artista"/>

        <Label Text="Descripción"/>
        <Editor x:Name="descripcionEditor"
                Placeholder="Descripción del artista"
                AutoSize="TextChanges"/>

        <Label Text="Imagen (URL)"/>
        <Entry x:Name="imagenEntry"
               Placeholder="URL de la imagen del artista"/>

        <Button Text="Guardar"
                Clicked="OnGuardarClicked"
                BackgroundColor="LightBlue"
                Margin="0,20,0,0"/>

        <Button Text="Cancelar"
                Clicked="OnCancelarClicked"
                BackgroundColor="LightGray"
                Margin="0,10,0,0"/>
    </StackLayout>
</ContentPage>

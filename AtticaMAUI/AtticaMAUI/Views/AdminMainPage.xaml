<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtticaMAUI.Views.AdminMainPage"
             Title="AdminMainPage">

    <StackLayout>
        <Label Text="Welcome to .NET MAUI! ADMIN"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="CenterAndExpand" />

        <!-- Botones de sección -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button Text="Obras"
                    Clicked="OnObrasClicked"
                    Margin="5"/>
            <Button Text="Artistas"
                    Clicked="OnArtistasClicked"
                    Margin="5"/>
            <Button Text="Galería"
                    Margin="5"/>
        </StackLayout>

        <!-- Aquí puedes agregar el contenido de cada sección -->

    </StackLayout>
</ContentPage>
